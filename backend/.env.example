# Backend .env.example – copy to .env and adjust as needed

# Database – default: SQLite at backend/data/converter.db
# MySQL (port 3306): create DB and user, e.g. CREATE DATABASE converter; CREATE USER 'app'@'localhost' IDENTIFIED BY 'password'; GRANT ALL ON converter.* TO 'app'@'localhost';
# Option A – single URL (password must NOT contain @ or #, or use Option B):
#   DATABASE_URL=mysql+pymysql://USER:PASSWORD@localhost:3306/DATABASE_NAME
# Option B – separate vars (use this if your password contains @ or other special chars):
#   MYSQL_HOST=localhost
#   MYSQL_PORT=3306
#   MYSQL_USER=root
#   MYSQL_PASSWORD=yourpassword
#   MYSQL_DATABASE=converter
# SQL Server: DATABASE_URL=mssql+pyodbc://...
# DATABASE_URL=

# Paths (optional; defaults: backend/uploads, backend/outputs, backend/zips)
# UPLOAD_DIR=
# OUTPUT_DIR=
# BATCH_ZIP_DIR=

# Conversion quality (optional)
# WEB_OPTIMIZED_QUALITY=85
# WEB_OPTIMIZED_EFFORT=6
# DEFAULT_QUALITY=90

# Concurrency
# MAX_WORKERS=8

# URL download limits
# URL_DOWNLOAD_MAX_MB=50
# URL_DOWNLOAD_TIMEOUT=60

# Server
# HOST=0.0.0.0
# PORT=8000

# CORS – comma-separated origins for the frontend
# CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging
# LOG_LEVEL=INFO
